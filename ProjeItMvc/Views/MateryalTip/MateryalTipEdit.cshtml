@model Entities.MateryalTip
@{
    ViewBag.Title = "MateryalTipEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <b>Güncelle</b>
            </header>
            <div class="panel-body">
                <form class="form form-vertical" enctype="multipart/form-data" asp-action="MateryalTipEdit" asp-controller="MateryalTip" method="post">
                    @*<form role="form" class="form-horizontal tasi-form">*@
                    <div class="form-group has-success">
                        <label style="font-size:17px" class="col-lg-2 control-label">Materyal Tip Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="MateryalTipAdi" value="@Model.MateryalTipAdi">
                            <input type="text" autocomplete="off" style="display:none !important" id="first-name-vertical" class="form-control" name="MateryalTipId" value="@Model.MateryalTipId" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10 " style="margin-top:10px;">
                            <button class="btn btn-info" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

