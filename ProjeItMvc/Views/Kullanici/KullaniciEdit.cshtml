@model Entities.Kullanici
@{
    ViewBag.Title = "KullaniciEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>KullaniciEdit</h2>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <b>Güncelle</b>
            </header>
            <div class="panel-body">
                <form class="form form-vertical" enctype="multipart/form-data" asp-action="KullaniciEdit" asp-controller="Kullanici" method="post">
                    @*<form role="form" class="form-horizontal tasi-form">*@
                    <div class="form-group has-success">
                        <label style="font-size:17px" class="col-lg-2 control-label">Adı Soyadı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="AdiSoyadi" value="@Model.AdiSoyadi">
                            <input type="text" autocomplete="off" style="display:none !important" id="first-name-vertical" class="form-control" name="KullaniciId" value="@Model.KullaniciId" />
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label style="font-size:17px" class="col-lg-2 control-label">Kullanıcı Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="KullaniciAdi" value="@Model.KullaniciAdi">
                            <input type="text" autocomplete="off" style="display:none !important" id="first-name-vertical" class="form-control" name="KullaniciId" value="@Model.KullaniciId" />
                        </div>
                    </div>
                    <div class="form-group has-success" style="margin-top:2em;">
                        <label style="font-size:17px" class="col-lg-2 control-label">Rol Adı</label><br />
                        <div class="col-lg-10">
                            <select name="RolId" class="form-control input-lg m-bot15">
                                @foreach (var item in ViewBag.Rol)
                                {
                                    if (ViewBag.kullanıcı.RolId == item.RolId)
                                    {
                                        <option selected value="@item.RolId">@item.RolAdi</option>

                                    }
                                    else
                                    {
                                        <option value="@item.RolId">@item.RolAdi</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10 " style="margin-top:10px;">
                            <button class="btn btn-info" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
