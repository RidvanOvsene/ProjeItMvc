@model Entities.TüpCins
@{
    ViewBag.Title = "TüpCinsEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <b>Güncelle</b>
            </header>
            <div class="panel-body">
                <form class="form form-vertical" enctype="multipart/form-data" asp-action="TüpCinsEdit" asp-controller="TüpCins" method="post">
                    @*<form role="form" class="form-horizontal tasi-form">*@
                    <div class="form-group has-success">
                        <label style="font-size:17px" class="col-lg-2 control-label">Tüp Cinsi Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="TüpCinsAdi" value="@Model.TüpCinsAdi">
                            <input type="text" autocomplete="off" style="display:none !important" id="first-name-vertical" class="form-control" name="TüpCinsId" value="@Model.TüpCinsId" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10 " style="margin-top:10px;">
                            <button class="btn btn-info" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

